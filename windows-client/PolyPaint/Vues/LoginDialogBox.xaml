<Window x:Class="PolyPaint.Vues.LoginDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyPaint.Vues"
        mc:Ignorable="d"
        Title="Connect" Height="245" Width="300"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}">
    <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Margin="4,10,4,4">URL</Label>
            <TextBox Name="ip" Grid.Column="1" Grid.Row="0" VerticalContentAlignment="Center" Margin="4,10,4,4" Text="127.0.0.1" />
            <Label Grid.Column="0" Grid.Row="1" Margin="4" >Port</Label>
            <TextBox Name="port" Grid.Column="1" Grid.Row="1" Margin="4" VerticalContentAlignment="Center" Text="3000" />

            <CheckBox Name="anonymous"  Grid.Column="1" Grid.Row="2" Margin="4" IsThreeState="false" Click="anonymous_Click">Log-in anonymously</CheckBox>
            
            <Label Name="emailLabel" Grid.Column="0" Grid.Row="3" Margin="4">Email</Label>
            <TextBox Name="email" Grid.Column="1" Grid.Row="3" Margin="4" VerticalContentAlignment="Center" />
            <Label Name="passwordLabel" Grid.Column="0" Grid.Row="4" Margin="4" >Password</Label>
            <PasswordBox Name="password" Grid.Column="1" Grid.Row="4" Margin="4" VerticalContentAlignment="Center" />
            <Button Name="connect" Grid.Column="1" Grid.Row="5" Margin="8" Height="30" Width="100" HorizontalAlignment="Right" IsDefault="True" Content="_Connect" Click="Connect_Click"/>
        </Grid>
    </StackPanel>
</Window>
