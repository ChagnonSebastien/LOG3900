<ContentControl x:Class="PolyPaint.Vues.GalleryComment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyPaint.Vues"
      mc:Ignorable="d"
      Width="273.4" Height="48.067">

    <Grid RenderTransformOrigin="0.441,0.499">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  SharedSizeGroup="Checkerz" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>
        <Image Source="https://picsum.photos/32/32/?image=474"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0" Width="24.057" Height="33.067" />
        <StackPanel Margin="18.667,0,0,0" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="{Binding UserName, Mode = OneWay}" FontWeight="Bold" />
                <TextBlock Text="{Binding ImageComment.timestamp, Mode = OneWay}" FontWeight="Bold" />
            </StackPanel>
            <TextBlock Text="{Binding ImageComment.comment, Mode = OneWay}" />
        </StackPanel>
    </Grid>
</ContentControl>
